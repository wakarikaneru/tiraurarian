<div class="tweet-container">
  <div class="hukidasi w-100" style="max-width:800px">
    <h3>チラモン情報</h3>

    <div class="d-flex flex-row flex-wrap">

      <div class="hukidasi w-100 m-2">
        <h1 class="text-center"><%= disp_data[:name] %></h1>
        <div class="d-flex justify-content-center align-items-center">
          <div class="tiramon-icon m-2">
            <%= image_tag "/images/tiramon/tiramon.png", class: "user-img image_x64" %>
            <div class="badge badge-pill badge-primary badge_float text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(0, 1, (disp_data[:quality]))) %></div>
          </div>
          <div class="m-2">
            <div class="text-big">Lv: <%= disp_data[:level].to_i %></div>
            <div>身長: <%= (disp_data[:height] * 100).to_i  %>cm</div>
            <div>体重: <%= (disp_data[:weight]).to_i %>kg</div>
          </div>
        </div>

        <div class="d-flex justify-content-center align-items-center">
          <div class="m-2">
            <div>階級: <%= Constants::TIRAMON_RULE_NAME[tiramon.rank] %></div>
            <div>ランク: <%= tiramon.auto_rank ? tiramon.auto_rank : "なし" %></div>
          </div>
        </div>

        <div class="w-100">

          <div class="d-flex hukidasi p-0 m-2">

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>体力</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:hp]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:hp].to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>精神力</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:mp]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:mp].to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>スタミナ</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:sp]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:sp].to_i %></div><% end %>
              </div>
            </div>

            <div class="flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>スピード</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:speed]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:speed].to_i %></div><% end %>
              </div>
            </div>

          </div>

          <div class="d-flex hukidasi p-0 m-2">

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>体力回復</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:recovery_hp]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:recovery_hp].to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>精神回復</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:recovery_mp]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:recovery_mp].to_i %></div><% end %>
              </div>
            </div>

            <div class="flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>スタミナ回復</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:recovery_sp]))) %></div>
                <% if my_tiramon %><div class="p-1"><%= disp_data[:recovery_sp].to_i %></div><% end %>
              </div>
            </div>

          </div>

          <div class="d-flex hukidasi p-0 m-2">

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>攻撃-打</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:attack][0] * 100))) %></div>
                <% if my_tiramon %><div class="p-1"><%= (disp_data[:attack][0] * 100).to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>攻撃-投</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:attack][1] * 100))) %></div>
                <% if my_tiramon %><div class="p-1"><%= (disp_data[:attack][1] * 100).to_i %></div><% end %>
              </div>
            </div>

            <div class="flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>攻撃-極</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:attack][2] * 100))) %></div>
                <% if my_tiramon %><div class="p-1"><%= (disp_data[:attack][2] * 100).to_i %></div><% end %>
              </div>
            </div>

          </div>
          <div class="d-flex hukidasi p-0 m-2">

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>防御-打</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:defense][0] * 100))) %></div>
                <% if my_tiramon %><div class="p-1"><%= (disp_data[:defense][0] * 100).to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>防御-投</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:defense][1] * 100))) %></div>
                <% if my_tiramon %><div class="p-1"><%= (disp_data[:defense][1] * 100).to_i %></div><% end %>
              </div>
            </div>

            <div class="flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>防御-極</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (disp_data[:defense][2] * 100))) %></div>
                <% if my_tiramon %><div class="p-1"><%= (disp_data[:defense][2] * 100).to_i %></div><% end %>
              </div>
            </div>

          </div>

        </div>

      </div>

    </div>

    <% if getable %>
      <div class="text-center">
        <%= link_to tiramon_get_path(id: tiramon), method: :post, class: "btn btn-primary m-2", data: { confirm: "本当にゲットしますか？" } do %>
          ゲットする！(チラモンボール: 残り<%= tiramon_trainer.tiramon_ball %>)
        <% end %>
      </div>
    <% end %>

    <% if backable %>
      <div class="text-center">
        <%= link_to tiramon, class: "btn btn-primary m-2" do %>
          チラモン画面へ戻る
        <% end %>
      </div>
    <% end %>

  </div>
</div>
