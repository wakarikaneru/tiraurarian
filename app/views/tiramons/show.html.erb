<div class="title">チラモン情報</div>
<%= render partial: "/layouts/tiramon_nav" %>
<div class="tweet-container">
  <div class="hukidasi width-full word-break">
    <h3>チラモン情報</h3>

    <div class="d-flex flex-row flex-wrap">

      <div class="hukidasi w-100 m-2" style="max-width:600px">
        <h1 class="text-center"><%= @disp_data[:name] %></h1>
        <div class="d-flex justify-content-center align-items-center">
          <div class="m-2">
            <%= image_tag "/images/tiramon/tiramon.png", class: "user-img" %>
          </div>
          <div class="m-2">
            <div class="text-big">Lv: <%= @disp_data[:level].to_i %></div>
            <div>身長: <%= (@disp_data[:height] * 100).to_i  %>cm</div>
            <div>体重: <%= (@disp_data[:weight]).to_i %>kg</div>
          </div>
        </div>

        <div class="d-flex justify-content-center align-items-center">
          <div class="m-2">
            <div>階級: <%= Constants::TIRAMON_RULE_NAME[@tiramon.rank] %></div>
            <div>ランク: <%= @tiramon.auto_rank ? @tiramon.auto_rank : "なし" %></div>
          </div>
        </div>

        <div class="w-100">

          <div class="d-flex hukidasi p-0 m-2">

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>体力</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (@disp_data[:hp]))) %></div>
                <% if @my_tiramon %><div class="p-1"><%= @disp_data[:hp].to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>精神力</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (@disp_data[:mp]))) %></div>
                <% if @my_tiramon %><div class="p-1"><%= @disp_data[:mp].to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
              <div class="bg-info text-white p-2 text-center text-shadow"><b>スタミナ</b></div>
              <div class="d-flex justify-content-center align-items-center m-1">
                <div class="p-1 text-big"><%= Tiramon.get_message(Constants::TIRAMON_STATUS_RANK, Tiramon.leap(25, 300, (@disp_data[:sp]))) %></div>
                <% if @my_tiramon %><div class="p-1"><%= @disp_data[:sp].to_i %></div><% end %>
              </div>
            </div>

            <div class="border-right flex-grow-1">
